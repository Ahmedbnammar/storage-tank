<script>
    document.getElementById("toPdf").onclick = async () => {

        $("#loadingModal").modal("show");
        // loop through all divs with the class card-body
        let data = []
        $('.card-body').each(function () {
            // get the text of the first h2
            let title = $(this).find('h2').first().text();
            let image = $(this).data('image');

            // check if it has a table child and get the html
            if ($(this).find('table').length > 0) {
                // get the table
                let table = $(this).find('table').first();

                // extract table data
                let tableData = [];
                table.find('tr').each(function () {
                    let row = [];
                    $(this).find('td, th').each(function () {
                        // check it's an input
                        if ($(this).find('input').length > 0) {
                            row.push($(this).find('input').val());
                        } else {
                            // get the text
                            row.push($(this).text());
                        }
                    });
                    tableData.push(row);
                });

                // add the table data to the data array
                data.push({
                    title: title,
                    image: image,
                    data: tableData,
                    isTable: true
                });

                return;
            }


            // loop through all the input fields and get their labels and values
            let inputs = $(this).find('input');
            let labelsInputsMap = [];
            inputs.each(function () {
                let labels = $("label[for='" + $(this).attr('id') + "']");
                let labelVal = labels.length > 0 ? labels[0].innerText : $(this).attr('id');

                labelsInputsMap.push({
                    label: labelVal,
                    value: $(this).val()
                });
            });

            data.push({
                title: title,
                image: image,
                inputs: labelsInputsMap
            });
        });
        // submit map via ajax
        $.ajax({
            url: "{{ path('make_report') }}",
            type: "POST",
            data: JSON.stringify(data),
            contentType: "application/json",
            success: function (data) {
                $("#loadingModal").modal("hide");
                window.open(data);
            },
            error: function (data) {
                $("#loadingModal").modal("hide");
            }
        });
