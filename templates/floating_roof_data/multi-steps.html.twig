<script>
    $(document).ready(function () {
        window.jsPDF = window.jspdf.jsPDF;
    });

    const pageWidth = 210;
    const pageHeight = 297;
    const marginX = 10;
    const marginY = 10;

    const imageWidth = pageWidth - marginX * 2;


    document.getElementById("toPdf").onclick = async () => {

        $("#loadingModal").modal("show");

        const doc = new jsPDF({
            orientation: 'p',
            unit: 'mm',
            format: [pageWidth, pageHeight],
            margin: [marginX, marginY, marginX, marginY]
        });


        // loop through divs with class tab in plain javascript
        const divs = document.getElementsByClassName("tab");
        for (let i = 0; i < divs.length; i++) {
            let div = divs[i];
            const oldDisplay = div.style.display;
            div.style.setProperty("display", "flex", "important")
            let canvas = await html2canvas(div);
            let imgData = canvas.toDataURL('image/png');
            div.style.setProperty("display", oldDisplay, "important")

            // adjust image height to image width keeping aspect ratio
            let imageHeight = imageWidth * canvas.height / canvas.width;

            doc.addImage(imgData, 'PNG', marginX, marginY, imageWidth, imageHeight);
            doc.addPage();
        }
        // hide the loader
        $("#loadingModal").modal("hide");
        await doc.save('test.pdf');
    }
</script>

